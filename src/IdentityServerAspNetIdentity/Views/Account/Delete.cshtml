@using IdentityServer4.Extensions
@model IdentityServerAspNetIdentity.Controllers.Account.DeleteUserViewModel

<div class="login-page">
    <div class="lead">
        <h1>Delete Account</h1>
        <p>Sorry to see you leave. But nice to have seen you here :) Hope you come back some day</p>
        @if (User.IsAuthenticated())
        {
            <p>For external login providers please login first and then delete account</p>
        }
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Delete Account</h2>
                </div>

                <div class="card-body">
                    @if (Model.IsLocalUser)
                    {
                        <form asp-route="Delete">
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autofocus autocomplete="off">
                            </div>

                            <button class="btn btn-primary" name="button" value="delete">Delete</button>
                            <button class="btn btn-secondary" name="button" value="back">Back</button>
                        </form>
                    }
                    else
                    {
                        <form asp-route="Delete">
                            <button class="btn btn-danger" name="button" value="delete">Delete</button>
                            <button class="btn btn-secondary" name="button" value="back">Back</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>